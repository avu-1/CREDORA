# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database - PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=credora_bank
PG_USER=postgres
PG_PASSWORD=1234
PG_POOL_MIN=2
PG_POOL_MAX=10

# Database - MongoDB
MONGO_URI=mongodb://localhost:27017/credora_logs
MONGO_DB_NAME=credora_logs

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRY_SECONDS=60
OTP_LENGTH=6

# Email Configuration (for OTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@credora.com

# SSL/TLS
SSL_KEY_PATH=./config/ssl/private.key
SSL_CERT_PATH=./config/ssl/certificate.crt

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

